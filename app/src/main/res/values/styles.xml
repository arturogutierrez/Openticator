<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>

    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorControlNormal">@color/colorSecondaryText</item>
    <item name="colorControlActivated">@color/colorPrimary</item>
    <item name="colorControlHighlight">@color/colorPrimary</item>

    <item name="android:textColorPrimary">@android:color/black</item>

    <item name="actionBarItemBackground">?attr/selectableItemBackground</item>
  </style>

  <!-- Toolbar -->
  <style name="ToolbarBase">
    <item name="android:minHeight">?actionBarSize</item>
    <item name="android:background">?colorPrimary</item>
    <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    <item name="android:theme">@style/ToolbarTheme</item>
  </style>

  <style name="Toolbar" parent="ToolbarBase"/>

  <style name="ToolbarTheme">
    <item name="colorControlNormal">@android:color/white</item>
    <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    <item name="android:textColorPrimary">@android:color/white</item>
  </style>

  <!-- Floating Action Buttons -->
  <style name="FABButtonsStyle">
    <item name="fab_size">mini</item>
    <item name="fab_showAnimation">@anim/jump_from_down</item>
    <item name="fab_hideAnimation">@anim/jump_to_down</item>
    <item name="fab_colorNormal">@color/colorPrimary</item>
    <item name="fab_colorPressed">@color/colorPrimaryDark</item>
  </style>

  <!-- Add account -->
  <style name="Wizard.EditText"
      parent="Base.Widget.AppCompat.EditText">
    <item name="android:textColor">@color/colorPrimaryText</item>
    <item name="android:textColorHint">@color/colorSecondaryText</item>
    <item name="android:textCursorDrawable">@null</item>
  </style>

</resources>
